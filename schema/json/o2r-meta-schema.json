{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "o2r-meta",
	"description": "o2r metadata schema",
	"definitions": {
		"author": {
			"type": "array",
			"items": {
				"properties": {
					"authorAffiliation": {
						"type": "array"
					},
					"authorId": {
						"type": "array"
					},
					"authorName": {
						"type": "string"
					}
				}
			},
			"required": ["authorAffiliation", "authorName"]
		},
		"depends": {
			"type": "array",
			"items": {
				"properties": {
					"operatingSystem": {
						"type": "array"
					},
					"packageId": {
						"type": "string"
					},
					"packageSystem": {
						"type": "string"
					},
					"version": {
						"type": "string"
					}
				}
			},
			"required": ["packageId", "packageSystem", "version"]
		}
	},
	"type": "object",
	"properties": {
		"author": {
			"$ref": "#/definitions/author"
		},
		"dateCreated": {
			"type": "string"
		},
		"depends": {
			"$ref": "#/definitions/depends"
		},
		"description": {
			"type": "string"
		},
		"generatedBy": {
			"type": "string"
		},
		"interactionMethod": {
			"type": "string"
		},
		"objectType": {
			"type": "string"
		},
		"recordDateCreated": {
			"type": "string"
		},
		"softwarePaperCitation": {
			"type": "string"
		},
		"version": {
			"type": "string"
		},
		"ercIdentifier": {
			"type": "string"
		},
		"title": {
			"type": "string"
		},
		"keywords": {
			"type": "string"
		},
		"paperLanguage": {
			"type": "string"
		}
	},
	"required": [
		"author",
		"dateCreated",
		"dependency",
		"description",
		"generatedBy",
		"recordDateCreated",
		"softwarePaperCitation",
		"version",
		"ercIdentifier",
		"title",
		"keywords",
		"paperLanguage"
	]
}